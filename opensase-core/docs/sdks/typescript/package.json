{
  "name": "@opensase/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript/JavaScript SDK for the OpenSASE Platform API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opensase",
    "billyronks",
    "api",
    "sdk",
    "identity",
    "crm",
    "payments",
    "ecommerce",
    "hr",
    "marketing"
  ],
  "author": "BillyRonks Global Limited",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/billyronks/opensase-typescript-sdk"
  },
  "bugs": {
    "url": "https://github.com/billyronks/opensase-typescript-sdk/issues"
  },
  "homepage": "https://docs.opensase.billyronks.io/sdks/typescript",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
